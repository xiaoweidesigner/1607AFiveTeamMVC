@model IEnumerable<RecallOnTimeMVC.Models.Movie>
@{
    ViewBag.Title = "ShowMovie";
}
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>编号</th>
            <th>电影名称</th>
            <th>影片时长</th>
            <th>所属类型</th>
            <th>单价</th>
            <th>评分</th>
            <th>剧情介绍</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.MId</td>
            <td>@item.M_Name</td>
            <td>@item.M_Time</td>
            <td>@item.M_Mold</td>
            <td>@item.M_Price</td>
            <td>@item.M_Grade</td>
            <td>@item.M_Plot</td>
            <td>@item.M_State</td>
            <td>@Html.ActionLink("查看详情", "ShowMovieById", new { Id = item.MId })</td>
        </tr>
        }
    </table>


