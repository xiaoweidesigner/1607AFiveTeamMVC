@model RecallOnTimeMVC.Models.Movie
@{
    ViewBag.Title = "ShowMovieById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-bordered">
    <tr>
        <td style="width:150px;">影片名称</td>
        <td>
            <label>@Model.M_Name</label>
        </td>
    </tr>

    <tr>
        <td style="width:150px;">影片图片</td>
        <td>
            <img src="@Model.M_Img" alt="" width="50" height="50"/>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">影片单价</td>
        <td>
            <label>@Model.M_Price</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">影片时长</td>
        <td>
            <label>@Model.M_Time</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">制片人</td>
        <td>
            <img src="@Model.M_FilmProducer" alt="" />
        </td>
    </tr>
    <tr>
        <td style="width:150px;">制片公司</td>
        <td>
            <label>@Model.M_Company</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">影片评分</td>
        <td>
            <label>@Model.M_Grade</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">影星</td>
        <td>
            <label>@Model.M_FileStar</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">影片年份</td>
        <td>
            <label>@Model.M_Year</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">版本</td>
        <td>
            <label>@Model.M_Region</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">上映时间</td>
        <td>
            <label>@Model.M_Show</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">地区</td>
        <td>
            <label>@Model.M_Edition</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">所属类型</td>
        <td>
            <label>@Model.M_Mold</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">剧情介绍</td>
        <td>
            <label>@Model.M_Plot</label>
        </td>
    </tr>
    <tr>
        <td style="width:150px;">上下架</td>
        <td>
            <label>
                @if (Model.M_State == 1)
                {
                    @:上架
                }
                else {
                    @:下架
                }

            </label>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <button class="layui-btn" type="button" onclick="location.href = '/LmqMVC/ShowMovie';" lay-submit="" lay-filter="demo1">返回列表</button>
        </td>
    </tr>
</table>


