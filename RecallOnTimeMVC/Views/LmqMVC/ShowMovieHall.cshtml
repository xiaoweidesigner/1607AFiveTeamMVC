@model IEnumerable<RecallOnTimeMVC.Models.MovieHall>
@{
    ViewBag.Title = "ShowMovieHall";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input id="Button1" type="button" value="添加影厅" class="btn btn-info" onclick="AddHall()" />
<table class="layui-table" lay-skin="line" >
    <thead>
        <tr>
            <th>编号</th>
            <th>影厅名称</th>
            <th>影厅图片</th>
            <th>状态</th>
        </tr>
    </thead>
    <tbody id="th">

    </tbody>
</table>

<div id="demo1"></div>

<script>
    $().ready(function () {
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage;
        $.ajax({
            url: "/LmqMVC/ShowMovieHallMethod",
            type: "get",
            dataType: "json",
            success: function (data) {
                $("#th").empty();
                //总页数大于页码总数
                for (var i = 0; i < data.length; i++)
                {
                    laypage.render({
                        elem: 'demo1'
                        , count: data.length//数据总数
                        , limit: 3
                        , jump: function (obj) {
                            //模拟渲染
                            document.getElementById('th').innerHTML = function () {
                                var arr = []
                                    , thisData = data.concat().splice(obj.curr * obj.limit - obj.limit, obj.limit);
                                layui.each(thisData, function (index, item) {
                                    var state = "";
                                    switch (item.H_State) {
                                        case 1: state="空闲中"
                                            break;
                                        case 2: state = "播放中";
                                            break;
                                        case 3: state = "需打扫";
                                            break;
                                        case 4: state = "打扫中";
                                            break;
                                    }
                                    arr.push("<tr><td>" + item.HId + "</td><td>" + item.H_Name + "</td><td><img src='" + item.H_Photo + "' width='50' height='50' class='layui-circle' alt='' /></td><td>" + state + "</td></tr >");
                                    });
                                return arr.join('');
                            }();
                        }
                    });
                }
            }
            })
        });
    });
    function AddHall() {
        var html = "";
        html += "<form action='/LmqMVC/AddMovieHall' enctype=\"multipart/form-data\" method=\"post\">";
        html += "<table class=\"table table - striped table - bordered\">";
        html += "<tr>";
        html += "<td style=\"width:100px;\">影厅名称</td>";
        html += "<td><input type=\"text\" name=\"H_Name\" ></td>";
        html += "</tr>";
        html += "<tr>";
        html += "<td style=\"width:100px;\">影厅图片</td>";
        html += "<td><input id=\"File1\" type=\"file\" name=\"file\" value=\"选择图片\" /></td>";
        html += "</tr>";
        html += "<tr>";
        html += "<td colspan=\"2\"><input id=\"Button1\" type=\"submit\" value=\"添加\" class=\"btn btn-info\"/></td>";
        html += "</tr>";
        html += "</table>";
        html += "</form>";
        layer.open({
            type: 1 //Page层类型
            , area: ['500px', '400px']
            , title: '添加影厅'
            , shade: 0.6 //遮罩透明度
            , maxmin: true //允许全屏最小化
            , anim: 1 //0-6的动画形式，-1不开启
            , content: html
        });
    }
    
</script>

