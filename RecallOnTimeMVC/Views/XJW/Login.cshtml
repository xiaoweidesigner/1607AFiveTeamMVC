<script>var basedir = 'cpts_639_ccb/public/ui/';</script>
<script src="~/cpts_639_ccb/public/ui/do.js"></script>
<script src="~/cpts_639_ccb/public/ui/config.js"></script>
<script>
    Do.ready('form', function () {
        $("#form").Validform({
            ajaxPost: true,
            postonce: true,
            tiptype: function (msg, o, cssctl) {
                if (!o.obj.is("form")) {
                    var objtip = o.obj.siblings(".Validform_checktip");
                    cssctl(objtip, o.type);
                    objtip.text(msg);
                } else {
                    var objtip = o.obj.find("#tip");
                    cssctl(objtip, o.type);
                    if (o.type == 2) {
                        window.location.href = 'index.php?r=admin/index/index';
                    } else {
                        objtip.text(msg);
                    }
                }
            }
        });
    });
</script>
