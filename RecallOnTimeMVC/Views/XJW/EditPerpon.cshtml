@model RecallOnTimeMVC.Models.Employee

@{
    ViewBag.Title = "EditPerpon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>个人资料</h2>

<form class="layui-form" action="/WangLuChao/UpdEmployees" method="post" enctype="multipart/form-data" id='fm1' lay-filter="example">
    <input type="hidden" value="@Model.EId" name="EId"/>
    <table class="layui-table" lay-skin="line" >
        <tr>
            <td align="right" width="20%" ></td>
            <td>
                <img src="@Model.E_Img" width="100" height="100" class="layui-circle" />
                <input id="File1" type="file" name="E_Img"/>
            </td>
        </tr>
        <tr>
            <td style="width:20%;" align="right" ><label class="layui-form-label">姓名</label></td>
            <td><input type="text" name="E_Name" placeholder="请输入姓名" value="@Model.E_Name" class="layui-input-inline"></td>
        </tr>
        <tr>
            <td style="width:20%;" align="right"  >
                <label class="layui-form-label">账号</label>
            </td>
            <td>
                <input type="text" name="E_Account" placeholder="请输入账号" value="@Model.E_Account" class="layui-input-inline">
                <input id="Hidden1" type="hidden" name="DepartMentId" value="@Model.DepartMentId" />
            </td>
        </tr>
        <tr>
            <td style="width:20%;" align="right"  >
                <label class="layui-form-label">密码</label>
            </td>
            <td>
                <input type="password" name="E_Pwd" placeholder="请输入密码" value="@Model.E_Pwd"  class="layui-input-inline">
            </td>
        </tr>
        <tr>
            <td style="width:20%;" align="right"  >
                <label class="layui-form-label">性别</label>
            </td>
            <td>
                <input type="text" value="@Model.E_Sex" name="E_Sex" class="layui-input-inline" />
            </td>
        </tr>
        <tr>
            <td style="width:20%;" align="right"  >
                <label class="layui-form-label">手机</label>
            </td>
            <td>
                <input type="text" name="E_Phone" value="@Model.E_Phone" placeholder="请输入手机" class="layui-input">
            </td>
        </tr>
        <tr>
            <td style="width:20%;" align="right"  ></td>
            <td>
                <input type="button" class="layui-btn" onclick="Back()"  value="返回" />
            </td>
            <td></td>
            <td> <input type="submit" class="layui-btn" lay-submit="/WangLuChao/UpdEmployees" v-on:click='dataSubmit' value="立即提交" id="gooods" /></td>
        </tr>
    </table>
</form>
<script>
    function Back()
    {
        location.href = '/XJW/ShowCustom';
    }
</script>
