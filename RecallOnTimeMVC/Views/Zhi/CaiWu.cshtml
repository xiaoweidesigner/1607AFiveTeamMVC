<body>
    <div class=" page-content clearfix">
        <select name="year1" id="nian"></select>
        <select name="month1" id="yue"></select>
        <select name="day1" id="ri"></select>
        <input id="Button1" type="button" value="查询" onclick="dianji()"/>
        <div class="transaction_style">
            <ul class="state-overview clearfix">
                <li class="Info">
                    <span class="symbol red"><i class="fa fa-jpy"></i></span>
                    <span class="value"><h4>交易金额</h4><p class="Quantity color_red">@ViewBag.jiaoyijine</p></span>
