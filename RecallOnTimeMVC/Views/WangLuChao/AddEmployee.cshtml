                //})catch(function(error){
                //失败时回调 error失败时的错误消息

                //})
            },
            methods: {
                dataSubmit: function () {
                    //axios.post('url',this.user)
                    //.then(fucntion(response){
                    //提交成功回调
                    //})
                    //.catch(function(error){
                    //提交失败回调
                    //})

                    //获取需保存的信息 位于this.user中

                    layer.open({ title: '获取表单数据', content: JSON.stringify(this.user) });

                }
            }
        });
        //Vue 脚本End

    };
</script>


